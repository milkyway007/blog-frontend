{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ] ,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "outDir": "./dist",
    "sourceMap":true,
    "removeComments": true,
    "noImplicitAny": true,
  },
  "include": [
    "src",
    "types", 
    "webpack.config.js",
    "webpack.config.prod.js"
  ],
  "exclude": [
    "node_modules"
  ]
}